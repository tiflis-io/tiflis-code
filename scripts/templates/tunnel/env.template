# Tiflis Code Tunnel Server Configuration
# Copy this file to .env and customize

# Required: API key for workstation registration (min 32 chars)
# Generate with: openssl rand -base64 48 | tr -dc 'a-zA-Z0-9' | head -c 32
TUNNEL_REGISTRATION_API_KEY=

# Server settings
PORT=3001
HOST=0.0.0.0
NODE_ENV=production
LOG_LEVEL=info

# Optional: Public WebSocket URL for clients
# Auto-detected if not set, but should be configured for production
# PUBLIC_BASE_URL=wss://tunnel.example.com

# Optional: Trust proxy headers (set to true behind nginx/traefik)
# TRUST_PROXY=false

# Optional: WebSocket path
# WS_PATH=/ws
